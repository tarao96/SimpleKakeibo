<% @page_title = "固定費科目一覧" %>
<h2 class="mt-4"><%= @page_title %></h2>

<%= link_to "固定費科目の新規登録", :new_fixedcost, class: "btn btn-primary my-3" %>

<% if @fixedcosts.present? %>
<table class="table table-hover">
    <thead>
        <tr>
            <th>科目名</th>
            <th>備考</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @fixedcosts.each do |fixedcost| %>
            <tr>
                <td><%= fixedcost.name %></td>
                <td><%= fixedcost.description %></td>
                <td>
                    <%= link_to "編集", [:edit, fixedcost], class: "btn btn-primary" %>
                    <%= link_to "削除", fixedcost, method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% else %>
    <p>登録されている固定費科目がありません。</p>
<% end %>