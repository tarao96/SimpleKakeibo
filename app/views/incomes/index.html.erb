<% @page_title = "収入科目一覧" %>
<h2 class="mt-4"><%= @page_title %></h2>

<%= link_to "収入科目の新規登録", :new_income, class: "btn btn-primary my-3" %>

<% if @incomes.present? %>
<table class="table table-hover">
    <thead>
        <tr>
            <th>科目名</th>
            <th>備考</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @incomes.each do |income| %>
            <tr>
                <td><%= income.name %></td>
                <td><%= income.description %></td>
                <td>
                    <%= link_to "編集", [:edit, income], class: "btn btn-primary" %>
                    <%= link_to "削除", income, method: :delete, data: { confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% else %>
    <p>登録されている収入科目がありません。</p>
<% end %>